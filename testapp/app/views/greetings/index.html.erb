<p id="notice"><%= notice %></p>

<h1>AWS学習用</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>学習記録</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @greetings.each do |greeting| %>
      <tr>
        <td><%= greeting.name %></td>
        <td><%= greeting.message %></td>
        <td><%= link_to '表示', greeting %></td>
        <td><%= link_to '編集', edit_greeting_path(greeting) %></td>
        <td><%= link_to '削除', greeting, method: :delete, data: { confirm: '削除してもいい?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規学習記録を記入', new_greeting_path %>
